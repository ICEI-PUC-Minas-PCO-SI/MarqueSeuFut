@model MarqueSeuFut.Models.Estatistica

@{
    ViewData["Title"] = "Editar Estatísticas";
}

<main class="container">
    <h2 align="center">Editar Estatísticas</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="PartidaId" class="control-label"></label>
                    <select asp-for="PartidaId" class="form-control" asp-items="ViewBag.PartidaId"></select>
                    <span asp-validation-for="PartidaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GolsF" class="control-label"></label>
                    <input asp-for="GolsF" class="form-control" />
                    <span asp-validation-for="GolsF" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GolsS" class="control-label"></label>
                    <input asp-for="GolsS" class="form-control" />
                    <span asp-validation-for="GolsS" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    <a asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
